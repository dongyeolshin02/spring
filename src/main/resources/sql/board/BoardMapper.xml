<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.exam.springs.board.mapper.BoardMapper">


  <select id="getBoardTotal"  resultType="int"> 
  
  	 select count(*) cnt
  	 from board
  
  </select>

  <!-- 게시글 리스트 가져오기 > 한 페이지당 보여줄 리스트  -->
  <select id= "getBoardList"  parameterType="map" resultType="boardResp">
  
      select brd_id,
             title,
             writer,
             read_count,
             like_count,
             create_date
      from board
      order by brd_id desc
      limit #{offSet}, #{count}
      
  </select>
</mapper>